{% extends '::base.html.twig' %}

{% set menu_item = 'palladium' %}


{% block body %}
	<h3>
		<i class="fa fa-angle-right"></i> Applications
		<div class="pull-right">
			<a class="btn btn-theme03" href="{{ path('admin_palladium_application_new') }}">Nouvelle application</a>
		</div>
	</h3>


	<table class="table table-stripped">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Description</th>
				<th>Key</th>
				<th>Status</th>
				<th>LastActivity</th>
				<th>Active</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for application in applications %}
				<tr>
					<td>{{ application.id }}</td>
					<td>{{ application.name }}</td>
					<td>{{ application.description }}</td>
					<td>{{ application.privateKey }}</td>
					<td>{% if application.connected %}Connected{% endif %}</td>
					<td>{% if application.lastActivity is not null %}{{ application.lastActivity|date('d/m/Y H:i:s') }}{% endif %}</td>
					<td>{% if application.active %}Oui{% else %}Inactive{% endif %}</td>
					<td><a class="btn btn-info btn-sm" href="{{ path('admin_palladium_application_edit', {applicationid: application.id})}}"><i class="fa fa-pencil"></i></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}

{% block javascripts %}
{% endblock %}